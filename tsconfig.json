{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "watch": true,
    "paths": {
      "src": ["/src"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
